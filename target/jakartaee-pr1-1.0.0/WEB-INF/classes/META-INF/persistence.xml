<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

  <persistence-unit name="AppPU" transaction-type="JTA">
    <!-- JNDI имя DataSource, которое создадим в GlassFish -->
    <jta-data-source>jdbc/AppDS</jta-data-source>

    <properties>
      <!-- Для лабы удобно: создание/обновление схемы -->
      <property name="jakarta.persistence.schema-generation.database.action" value="none"/>
      <!-- Можно поставить create / drop-and-create, но лучше управлять SQL-скриптом -->
      <!-- <property name="jakarta.persistence.schema-generation.database.action" value="create"/> -->

      <!-- Логи SQL (не обязательно) -->
      <property name="eclipselink.logging.level" value="FINE"/>
      <property name="eclipselink.logging.parameters" value="true"/>
    </properties>
  </persistence-unit>

</persistence>
